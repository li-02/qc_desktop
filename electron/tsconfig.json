{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    /* 输出配置 */
    "outDir": "../dist/electron",
    "sourceMap": true,
    /* 路径解析 */
    "baseUrl": "./",
    "paths": {
      "@shared/*": [
        "./shared/*"
      ]
    }
  },
  "include": [
    "**/*",
    "../shared/**/*",
    "../global.d.ts"
  ],
  "copy": ["workers/**/*"]
}
