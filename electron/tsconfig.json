{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../dist/electron",
    "rootDir": "./",
    "sourceMap": true
  },
  "include": ["**/*"],
  "copy": ["workers/**/*"]
}
